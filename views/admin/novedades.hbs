<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola {{ usuario }} !
                <a href="/admin/login/logout"
                    class="btn btn-sm btn-danger">Cerrar sesión <i class="fa fa-sign-out" aria-hidden="true"></i></a>
            </p>
        </div>
    </div>
    {{!!--fin de la fila 1--!!}}

    {{!!--inicio de la fila 2--!!}}
    <div class="row">
        <div class="col-7" style="margin-top:-9px;">
            <h2>Listado de novedades</h2>
        </div>

        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
        <div class="col-3">
            <form class="form-inline my-2 my-lg-0" action="/admin/novedades" method="get">
            <input class="form-control mr-sm-2" type="search" placeholder="Search"
           aria-label="Search" name="q" value="{{q}}">
           <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search"></i></button>
           </form> 
           </div>
    </div>
    {{!!fin fila 2!!}}
    {{!!inicio fila 3}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sección</th>
                <th scope="col">Imagen</th>
                <th scope="col">Acciones</th>

            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>
                <td class="text-right">
                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-trash"></i></a>
                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i
                            class="fa fa-pencil"></i></a>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
{{#if is_search}}
{{#unless novedades.length}}
No se encontraron resultados para "<strong> {{q}} </strong>
{{/unless}}
{{/if}}
<input class="form-control mr-sm-2" type="search"
placeholder="Search" aria-label="Search" name="q"
{{#if q}} value="{{q}}"{{/if}}>
</div>